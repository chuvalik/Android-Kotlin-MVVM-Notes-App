<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Headline">
        <item name="android:fontFamily">@font/quattrosentosans_bold</item>
        <item name="android:textColor">@color/semi_black</item>
    </style>

    <style name="Headline.h1" parent="Headline">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Headline.h2" parent="Headline">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Body">
        <item name="android:fontFamily">@font/quattrosentosans_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Body.b1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AuthFormStyle">
        <item name="android:fontFamily">@font/quattrosentosans_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="TitleText">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/quattrosentosans_bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="ContentTextStyling">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/quattrosentosans_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HelperText">
        <item name="android:textColor">@color/light_red</item>
        <item name="android:fontFamily">@font/quattrosentosans_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HelperText2">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/quattrosentosans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>